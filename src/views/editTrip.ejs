<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit trip's imformation</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.3/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="container">
        <div class="row">
            <form action="/update-trip" method="post">

                <div class="form-row">
                    <div class="col-12 mt-3"><b>Chỉnh sửa và cập nhật chuyến</b></div>

                    <div class="form-group col-md-6">
                        <label for="inputEmail4">Điểm xuất phát</label>
                        <input type="text" class="form-control" placeholder="Điểm xuất phát" name="diemXuatPhat"
                            value="<%= trip.diemXuatPhat %>">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputPassword4">Điếm đến</label>
                        <input type="text" class="form-control" name="diemDen" placeholder="Điểm đến"
                            value="<%= trip.diemDen %>">
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputAddress">Ngày khởi hành</label>
                    <input type="date" class="form-control" name="ngayKhoiHanh" placeholder="Ngày"
                        value="<%= trip.ngayKhoiHanh %>">
                </div>
                <div class="form-group">
                    <label for="inputAddress">Giá vé</label>
                    <input type="number" class="form-control" name="giaVe" placeholder="Giá" value="<%= trip.giaVe %>">
                </div>
                <!-- <div class="form-group">
                    <label for="inputAddress">Trạng thái</label>
                    <input type="number" class="form-control" name="trangThai" placeholder="true/false"
                        value="<%= trip.trangThai %>">
                </div> -->
                <div class="form-group">
                    <label for="inputAddress">Tên toa</label>
                    <input type="text" class="form-control" name="tenToa" placeholder="Toa" value="<%= trip.tenToa %>">
                </div>
                <div class="form-group">
                    <label for="inputAddress">Tên tàu</label>
                    <input type="text" class="form-control" name="tenTau" placeholder="Tàu" value="<%= trip.tenTau %>">
                </div>
                <input name="id" value="<%= trip.id %>" type="text" hidden>

                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</body>

</html>