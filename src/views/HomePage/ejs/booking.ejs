.booking-form {
	background-color: var(--maincolor);
	color: #fff;
	position: relative;
    border-top: 3px dashed #333;

}
.booking-form::after {
	display: inline-block;
	content: '';
	position: absolute;
	top: -24px;
	left: 0;
    z-index: 2;

	width:295px;
	height: 23px;
    background-image: url('../images/train-footer.png');
    background-repeat: no-repeat;
    background-size: cover;
    animation: trainRun linear 14s infinite;
    /* background-color: #333; */
}
@keyframes trainRun {
    from {
        left: -295px;

    }
    to {
        left: calc(100% + 300px);
    }
}

.booking-form .hotline {
	padding: 6px 0;
	text-align: center;
}
.booking-form form {
	display: flex;
	width: 100%;
	align-items: center;
	justify-content: space-between;
}

.booking-form .hotline h3 {
	text-transform: uppercase;
	margin: 0;
}

.booking-form .hotline p {
	margin: 0;
}

.booking-form .form-child {
	width: 13%;
	display: inline-block;
}

.booking-form .form-child.day {
	background-color: #fff;
	color: #333;
	border-radius: 8px;
}

.booking-form .form-child input[type='date'] {
	border: none;
}

.booking-form .form-child.btn {
	width: 13%;
	display: inline-block;
	font-size: 20px;
	padding: 9px 0;
	font-weight: 600;
}

.form-child input {
